{
  "name": "mike182uk/cart",
  "description" : "A flexible and modern shopping cart package",
  "license": "MIT",
  "authors": [
    {
      "name": "Michael David Barrett",
      "email": "mike182uk@gmail.com"
    }
  ],
  "require" : {
    "php": ">=5.6.0"
  },
  "require-dev": {
    "phpunit/phpunit": "~5.0",
    "mockery/mockery": "~0.0",
    "friendsofphp/php-cs-fixer": "~2.0"
  },
  "autoload": {
    "psr-4": {
      "Cart\\": "src"
    }
  },
  "scripts": {
    "test": "./vendor/bin/phpunit",
    "test-coverage": "./vendor/bin/phpunit --coverage-clover coverage.clover",
    "lint": "./vendor/bin/php-cs-fixer fix --dry-run --verbose",
    "fix": "./vendor/bin/php-cs-fixer fix"
  }
}
